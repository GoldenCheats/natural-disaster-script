-- Improved Button Creator
local function CreateButton(name, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.92, 0, 0, 45) -- Chunkier Buttons
    btn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    btn.TextColor3 = Color3.fromRGB(240, 240, 240)
    btn.Text = name
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 14 -- Bigger Button Text
    btn.BorderSizePixel = 0
    btn.Parent = ContentFrame
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = btn

    local active = false
    btn.MouseButton1Click:Connect(function()
        active = not active
        btn.BackgroundColor3 = active and Color3.fromRGB(60, 180, 80) or Color3.fromRGB(25, 25, 25)
        callback(active)
    end)
    
    -- Hover effect
    btn.MouseEnter:Connect(function() if not active then btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40) end end)
    btn.MouseLeave:Connect(function() if not active then btn.BackgroundColor3 = Color3.fromRGB(25, 25, 25) end end)
end

--- BUTTON LOGIC ---
local Lp = game.Players.LocalPlayer

-- 1. Original
CreateButton("good no fall damage (ORIGINAL)", function(state)
    local char = Lp.Character
    if char and state then
        local hum = char:FindFirstChildOfClass("Humanoid")
        hum.MaxHealth = 999999
        hum.Health = 999999
        hum:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
        hum:SetStateEnabled(Enum.HumanoidStateType.FallingDown, false)
        hum.HealthChanged:Connect(function()
            if hum.Health < 500000 then hum.Health = hum.MaxHealth end
        end)
    end
end)

-- 2. No Animation Good Godmode
CreateButton("No Animation Very Good Godmode V2 (HOT)", function(state)
    local char = Lp.Character
    if char and state then
        local anim = char:FindFirstChild("Animate")
        if anim then anim.Disabled = true end
        local hum = char:FindFirstChildOfClass("Humanoid")
        hum.MaxHealth = 1e7
        hum.Health = 1e7
        hum:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
        print("No-Anim God Active")
    end
end)

-- 3. Nostalgia godmode (Bad)
CreateButton("Nostalgia godmode (Bad)", function(state)
    if state and Lp.Character then
        Lp.Character:BreakJoints() -- The old school "hope I glitch" method
        task.wait(0.2)
        local hum = Lp.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum:Destroy() end
        Instance.new("Humanoid", Lp.Character)
    end
end)

-- 4. Fixed Killbricks
CreateButton("Disable Kill Parts (FIXED)", function(state)
    if state then
        for _, v in pairs(workspace:GetDescendants()) do
            if v:IsA("BasePart") and not v:IsDescendantOf(Lp.Character) then
                if v.Material == Enum.Material.Neon or v.Transparency > 0.1 then
                    v.CanTouch = false
                end
            end
        end
    end
end)

--- UI CONTROLS ---
CloseBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local isMin = false
MinimizeBtn.MouseButton1Click:Connect(function()
    isMin = not isMin
    ContentFrame.Visible = not isMin
    MainFrame.Size = isMin and UDim2.new(0, 280, 0, 40) or UDim2.new(0, 280, 0, 280)
end)
